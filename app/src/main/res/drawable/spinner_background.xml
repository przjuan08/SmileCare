<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo -->
    <solid android:color="@android:color/white"/>

    <!-- Bordes -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD"/>

    <!-- Esquinas -->
    <corners android:radius="8dp"/>

    <!-- Padding interno -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp"/>
</shape>
