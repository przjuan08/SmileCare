<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.ConfirmAppointmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:paddingTop="25dp"
            app:titleMarginBottom="25dp"
            android:background="@color/primary"
            app:title="Confirmación de Cita"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            style="@style/Widget.MaterialComponents.Toolbar.Primary" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirmación de cita"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Doctor elegido:"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDoctor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dr. Carlos Martínez"
                        android:textColor="@color/text_secondary"
                        android:textAlignment="textEnd" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fecha seleccionada:"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFecha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="15/11/2024"
                        android:textColor="@color/text_secondary"
                        android:textAlignment="textEnd" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Horario seleccionado:"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvHorario"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="08:00 - 09:00"
                        android:textColor="@color/text_secondary"
                        android:textAlignment="textEnd" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dirección de la clínica:"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvUbicacion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Clínica Dental SmileCare, Calle Principal #123, San Salvador"
                        android:textColor="@color/text_secondary"
                        android:textAlignment="textEnd" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnVerMapa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ver en Mapa"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_map"
                    android:drawablePadding="8dp"
                    android:backgroundTint="@color/primary_light"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="24dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/primary_light"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnConfirmarGuardar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirmar y guardar"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/success"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.Button" />

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/error"
                    android:textColor="@color/white"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>